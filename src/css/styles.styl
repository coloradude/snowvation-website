*
  box-sizing border-box

@import 'materialize.css'

nav
  padding 0 .75rem

.one-third-opacity
  opacity .5
  
.flex-container
  display flex
  flex-wrap wrap
  .col
    width calc(33% - 40px)
    margin 20px
    
.flex-center
  width 100%
  display flex
  justify-content center
  align-items center
  
.flex-between
  width 100%
  display flex
  justify-content space-between
  align-items center
  * 
    margin 0 20px
  
.btn-floating .material-icons
  display flex
  justify-content center
  align-items center
  width initial

.action
  pointer cursor
  
.card .card-image
  display flex
  justify-content center
  
.card-image img
  max-height 275px
  max-width 275px
  
.equiptment-card .card-image img
  max-width 75%
  max-height 75%
  margin 0 auto

.card.equiptment-card .card-title-container
  display flex
  align-items center
  justify-content flex-start
  span.card-title
    margin-bottom 0

.equiptment-modify-container
  position absolute
  top 0
  right 0
  display flex
  flex-direction column
  align-items center
  a
    margin 10px 10px 0 0 